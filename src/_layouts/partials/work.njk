<!-- Portfolio Section -->

<section id="services">

    <span class="block font-semibold tracking-widest text-center">
        <h2 class="text-3xl text-gray-800 uppercase">Portfolio</h2>
        <a href="/portfolio">
            <p class="text-gray-500 lowercase">Click here to view my full portfolio</p>
        </a>
    </span>

    <div class="text-gray-700 ">
        <section class="text-gray-700 pt-12 body-font relative mb-8">
            <div class="container px-5 mx-auto">
                <div class="flex flex-wrap pt-12 -m-4">

                    {% for pfolio in portfolio %}
                        {% if loop.index0 < 3 %}

                        <div class="lg:w-1/3 sm:w-1/2 p-4 ">
                            <a href="{{pfolio.link}}" target="_blank" alt="Link to {{pfolio.title}}">
                                <div class="bg-white antialiased text-gray-900 height:100vh display:inline-grid">
                                    <div>
                                        <img src="{{pfolio.img}}" alt=" random imgee" class="w-full object-cover object-center rounded-lg {{pfolio.color}}">
                                        <div class="relative px-4 -mt-16  ">
                                            <div class="bg-white p-6 rounded-lg shadow-lg hover:bg-gray-200 hover:shadow-none">
                                                <h4 class="mt-1 text-md font-semibold uppercase leading-tight truncate">{{pfolio.title}}</h4>
                                                <div class="mt-1">{{pfolio.subTitle}}</div>
                                                <div class="mt-4">
                                                    <span class="text-teal-600 text-sm">{{pfolio.description}}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        {% endif %}{% endfor %}

                    </div>
                </div>
            </section>
        </div>
    </section>
    <!-- End Section -->